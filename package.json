{
  "name": "auto-changelog-example",
  "version": "0.0.0-development",
  "description": "My luminous module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/george-aidonidis/auto-commit-example"
  },
  "author": {
    "name": "George Aidonidis",
    "email": "george.aidonidis@gmail.com",
    "url": "iamgeorge.dev"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "codecov": "codecov",
    "cm": "semantic-git-commit",
    "semantic-release": "semantic-release",
    "cg": "yarn changelog",
    "prlog": "yarn pr-log"
  },
  "pr-log": {
    "dateFormat": "DD.MM.YYYY",
    "validLabels": [
      [
        "feature",
        "Feat"
      ],
      [
        "bug",
        "Fix"
      ]
    ]
  },
  "files": [
    "index.js"
  ],
  "keywords": [],
  "devDependencies": {
    "changelog.md": "^1.1.0",
    "codecov": "^3.2.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24",
    "lint-staged": "^8.1.4",
    "pr-log": "^3.1.0",
    "semantic-git-commit-cli": "^3.1.1",
    "semantic-release": "^15.13.3",
    "xo": "^0.24.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "lint-staged": {
    "*": [
      "xo --fix",
      "git add"
    ]
  },
  "xo": {
    "prettier": true,
    "envs": [
      "jest",
      "node",
      "browser"
    ],
    "rules": {
      "camelcase": 1
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
